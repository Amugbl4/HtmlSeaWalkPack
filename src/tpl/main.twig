{% extends '/tpl/inc/page.twig' %}
{% block content %}

<section class="intro intro--bg">
    <div class="intro__bg">
        <img src="../images/sochi-desk.jpg" alt="">
    </div>
    <div class="container">
        <div class="intro__content">
            <div class="intro__logo logo">
                <img src="../images/logo.png" alt="">
            </div>
            <h1 class="intro__title">Морские прогулки<span class="intro__title intro__title--big">
                    по чёрному морю</span></h1>
            <a href="" class="intro__action-link btn">Выбрать круиз</a>
        </div>
    </div>
</section>
<section class="catalog">
