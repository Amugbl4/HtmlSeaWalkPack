                <option value="">Сортировать по цене</option>
                <option value="">2</option>
                <option value="">3</option>
            </select>
        </div>
        <div class="card__list">
            <div class="card">
                <div class="card__img">
                    <img src="" alt="">
                </div>
                <div class="card__flag">
                    <div class="card__flag-text"></div>
                </div>
                <div class="card__info">
                    <div class="card__link">Обзорная морская
                        прогулка с экскурсией</div>
                    <div class="card__text"><span class="card__text card__text--bold">Маршрут:</span>Сочи-Адлер-Сочи
                        (без высадки)</div>
                    <div class="card__text"><span class="card__text card__text--bold">Продолжительность:</span>1
                        ч. 0 мин.</div>
                    <div class="card__price">49 000 руб.</div>
                </div>
            </div>
            <div class="card">
                <div class="card__img">
                    <img src="" alt="">
                </div>
                <div class="card__flag">
                    <div class="card__flag-text"></div>
                </div>
                <div class="card__info">
                    <div class="card__link"></div>
                    <div class="card__text"><span class="card__text card__text--bold"></span></div>
                    <div class="card__text"><span class="card__text card__text--bold"></span></div>
                    <div class="card__price"></div>
                </div>
            </div>
            <div class="card">
                <div class="card__img">
                    <img src="" alt="">
                </div>
                <div class="card__flag">
                    <div class="card__flag-text"></div>
                </div>
                <div class="card__info">
                    <div class="card__link"></div>
                    <div class="card__text"><span class="card__text card__text--bold"></span></div>
                    <div class="card__text"><span class="card__text card__text--bold"></span></div>
                    <div class="card__price"></div>
                </div>
            </div>
            <div class="card">
                <div class="card__img">
                    <img src="" alt="">
                </div>
                <div class="card__flag">
                    <div class="card__flag-text"></div>
                </div>
                <div class="card__info">
                    <div class="card__link"></div>
                    <div class="card__text"><span class="card__text card__text--bold"></span></div>
                    <div class="card__text"><span class="card__text card__text--bold"></span></div>
                    <div class="card__price"></div>
                </div>
            </div>
        </div>
        <button class="btn show-more" type="button">Больше круизов</button>
    </div>
</section>

{% endblock %}